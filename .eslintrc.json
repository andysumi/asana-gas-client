{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "googleappsscript"
  ],
  "parserOptions": {},
  "env": {
    "googleappsscript/googleappsscript": true
  },
  "globals": {
    // Google Apps Script
    "console": false,
    // External Libraries
    "GasTap": true,
    // Our Libraries
    "AsanaClient": false
  },
  "rules": {
    "semi": "warn",
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "space-before-blocks": ["warn", {"functions": "always"}],
    "no-console": "off"
  }
}
